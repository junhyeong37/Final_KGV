  VALUES (#{employee_id},#{first_name},#{last_name},#{email},#{phone_number},#{hire_date},#{salary},#{job_id})
  </insert> -->
  
  <insert id="userInsertData" parameterType="user" useGeneratedKeys="true" keyProperty="User_no">
  INSERT INTO User (User_no,User_id,User_pw,User_name,User_address,User_tel,User_email,User_birth,User_sex) 
  VALUES (#{User_id},#{User_pw},#{User_name},#{User_address},#{User_tel},#{User_email},#{User_birth},#{User_sex})
  </insert>
  
  <delete id="userDeleteData" parameterType="user">
  delete from User where User_id=#{User_id}</delete>
  
    </mapper>